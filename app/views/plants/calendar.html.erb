<% content_for :title, @plant ? @plant.human_name : "Dashboard - Garner" %>

<div class="span3">
  <div class="well sidebar-nav">
    <ul class="nav nav-list">
      <li><%= link_to "Dashboard", plants_path %></li>
      <li class="active"><%= link_to "Calendar", calendar_plants_path, "data-skip-pjax" => true %></li>
      <li><%= link_to 'Add a plant', new_plant_path, :class => "add-new-plant" %></li>
      <li class="nav-header">Still Growing</li>
      <% @growing.each do |plant| %>
        <li><%= link_to plant.human_name, plant %></li>
      <%- end -%>
      <li class="nav-header">Ready for Harvest</li>
      <% @harvested.each do |plant| %>
        <li><%= link_to plant.human_name, plant %></li>
      <%- end -%>
    </ul>
  </div><!--/.well -->
</div><!--/span-->

<div class="span9">
  <h1>Your Plant Calendar</h1>
  
  <p>A calendar view of when plants will reach maturity and be ready for harvest.</p>

  <div id="chart"></div>

  <p>A darker green indicates a high number of plants will reach maturity on that day.</p>
  
  <%= link_to "Export to iCal", plants_path(:format => "ics") %>
</div>
