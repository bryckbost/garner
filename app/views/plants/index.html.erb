<% content_for :title, @plant ? @plant.human_name : "Dashboard - Garner" %>

<div class="span3">
  <div class="well sidebar-nav">
    <ul class="nav nav-list">
      <li><%= link_to "Calendar", calendar_plants_path, "data-skip-pjax" => true %></li>
      <li><%= link_to 'Add a plant', new_plant_path, :class => "add-new-plant" %></li>
      <li class="nav-header growing">Still Growing</li>
      <% @growing.each do |plant| %>
        <li><%= link_to plant.human_name, plant %></li>
      <%- end -%>
      <li class="nav-header garner-these">Ready for Harvest</li>
      <% @harvested.each do |plant| %>
        <li><%= link_to plant.human_name, plant%></li>
      <%- end -%>
      <li class="nav-header garner-these">Need More Info</li>
      <% @in_progress.each do |plant| %>
        <li><%= link_to plant.human_name, plant%></li>
      <%- end -%>
    </ul>
  </div><!--/.well -->
</div><!--/span-->

<div class="span9">
  <h1>Garner Dashboard</h1>
  
  <div class="row-fluid">
    <div class="span8">
      <% if current_user.plants.empty? %>
      <div class="well empty-garden">
        <p>Uh-oh. Looks like you don't have any plants in your garden. <%= link_to "Add some now", new_plant_path %> to get started!</p>
        <p>After you add all of the plants in your garden, you'll be able to get notifications for when your plants are nearing maturity.</p>
      </div>
      <% end %>
    </div>

    <div class="span4"></div>
  </div>
</div>
