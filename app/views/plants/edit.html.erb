<% content_for :title, @plant ? @plant.name : "Garner" %>

<div class="span3">
  <div class="well sidebar-nav">
    <ul class="nav nav-list">
      <li><%= link_to "Dashboard", root_path %></li>
      <li><%= link_to "Calendar", calendar_plants_path %></li>
      <li class="nav-header">Still Growing</li>
      <% @growing.each do |plant| %>
        <li class="<%= 'active' if plant == @plant %>"><%= link_to plant.name.humanize, plant %></li>
      <%- end -%>
      <li class="nav-header">Ready for Harvest</li>
      <% @harvested.each do |plant| %>
        <li class="<%= 'active' if plant == @plant %>"><%= link_to plant.name.humanize, plant%></li>
      <%- end -%>
    </ul>
  </div><!--/.well -->
</div><!--/span-->

<div class="span9">
  <%= form_for @plant do |f| %>
  <fieldset class="width2">
    <%= f.label :name %>
    <%= f.text_field :name %>
  
    <%= f.label :planted_at, "Date Planted" %>
    <%= f.text_field :planted_at, :class => "datepicker" %>
  
    <%= f.label :harvest_time %>
    <%= f.text_field :harvest_time %>
    
  
    <%= f.submit "Update", :class => "btn" %> | <%= link_to 'Cancel', plants_path %>
  </fieldset>
  <% end %>
</div>